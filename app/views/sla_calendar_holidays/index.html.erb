<% html_title(l(:sla_label_global_settings)) %>
<div class="content"> 
  <div class="contextual">
    <%= link_to l('sla_label.sla_calendar_holiday.new'), new_sla_calendar_holiday_path, class: 'icon icon-add' if User.current.allowed_to?(:manage_sla, nil, global: true) %>
  </div>
  <div class="title-sla-settings title-sla_calendar_holiday">
    <%= title l('sla_label.sla_calendar_holiday.index') %>
  </div>
  <%= form_tag(sla_calendar_holidays_path, method: :get, id: 'query_form') do %>
    <%= render partial: 'queries/query_form' %>
  <% end %>
  <% if @query.valid? %>
    <% if @entities.empty? %>
      <p class="nodata"><%= l(:label_no_data) %></p>
    <% else %>
      <%= render_query_totals(@query) %>
      <%= render partial: 'list', locals: { entities: @entities }%>
      <span class="pagination"><%= pagination_links_full @entity_pages, @entity_count %></span>
    <% end %>
  <% end %>
</div>
<% content_for :sidebar do %>
  <%= render partial: 'slas/sidebar' %>
<% end %>